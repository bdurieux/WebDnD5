{% extends 'base.html.twig' %}
{% block body %}
<h1 class="center-item">Editeur: {{ type.name }}</h1>
{% if message|length > 0 %}
	<div class="alert alert-danger">
		{{ message }}
	</div>
{% endif %}
<div class="center-item">
    <form method="post" class="form-1 form-types inline-content center-content">
        <div class="form-group-h">   
            <label><strong>Type</strong></label>  
            <input type="text" name="type_name" value="{{ type.name }}" required class="form-control" />
        </div>
        <div class="form-group">   
            <input type="submit" value="Modifier" class="btn btn-success" />
        </div>
    </form>
</div>
{% endblock %}