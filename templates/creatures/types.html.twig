{% extends 'base.html.twig' %}
{% block body %}
<h1 class="center-item">Types de créature</h1>
<div>
    <table class="table table-large table-center col-2 table-font">
        <thead>
            <tr>
                <th colspan="2">Listes des types de créatures ({{ types|length }})</th>
            </tr>
            <tr>
                <th>Type</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for type in types %}
            <tr>
                <td><strong>{{ type.name|upper }}</strong></td>
                <td class="inline-content">
                    <div class="">
                        <a href="{{ path('type', { id: type.id })}}" class="button btn btn-primary" >
                        <strong>Modifier</strong>
                        </a>               
                    </div>
                    <form method="post" class="">
                        <div class="">   
                            <input type="hidden" name="type_del" value="{{ type.id }}" />
                        </div>
                        <div class="">   
                            <input type="submit" value="Supprimer" class="btn btn-danger" />
                        </div>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
<h2 class="center-item">Editeur de type de créature</h2>
{% if message|length > 0 %}
	<div class="alert alert-danger">
		{{ message }}
	</div>
{% endif %}
<div class="center-item">    
    <form method="post" class="form-1 form-types">
        <div class="form-group-h tp-name">   
            <label><strong>Type</strong></label>            
            <input type="text" name="type_name" required class="form-control" />
        </div>
        <div class="form-group tp-submit">   
            <input type="submit" value="Sauver" class="btn btn-success" />
        </div>
    </form>
</div>
{% endblock %}