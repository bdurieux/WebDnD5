{% extends 'base.html.twig' %}
{% block body %}
<h1 class="center-item" id="top" title="{{ feats|length }}">Dons</h1>
{% if message|length > 0 %}
	<div class="alert alert-danger">
		{{ message|raw }}
	</div>
{% endif %}
<div class="btn-list">
{% for prerequisite in prerequisiteList %}
    <div class="{% if prerequisite|length > 1  %}btn-label shadow rounded{% endif %} btn-list">
    {% if prerequisite|length > 1  %}<span class="bold">{{ prerequisite }}</span>{% endif %}
    {% for feat in feats %}
        {% if feat.prerequisite == prerequisite %}
        <a href="#feat_{{ feat.id }}" class="button btn btn-secondary">{{ feat.name }}</a>
        {% endif %}
    {% endfor %}
    </div>
{% endfor %}
</div>
<div>
    {% for feat in feats %}
        <div class="feat-header" id="feat_{{ feat.id }}">
            <div>
                <h2 title="{{ feat.source }} {{ feat.page }}">{{ feat.name }}</h2>
            </div>
            <div>
                <p>{{ feat.source }} {{ feat.page }}</p>
            </div>
        </div>        
        {% if feat.prerequisite|length > 1 %}
            <p><em><strong>Pr√©requis:</strong> {{ feat.prerequisite }}</em></p>
        {% endif %}
        <p>{{ feat.description|raw }}</p>
        <p><a href="#top" class="button btn btn-secondary">Haut de page</a></p>
    {% endfor %}    
</div>
{% endblock %}