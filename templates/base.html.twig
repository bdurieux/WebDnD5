<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="viewport-fit=cover, width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no" />
        <title>{% block title %}{{ title }}!{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}" />
        {% endblock %}
    </head>
    <body>
        {% block header %}
        <header>
            <div>
                <a href="{{ path('home') }}"><img src="{{ asset('images/dndnextlogo.jpg') }}" alt="logo" class="logo" ></a>
            </div>
            <nav>
                <ul>
                    <li><a href="{{ path('home') }}">Accueil</a></li>
                    <li class="dropdown">
                        <a href="" class="dropbtn">Règles</a>
                        <div class="dropdown-content">
                            <a href="{{ path('classes') }}">Classes</a>
                            <a href="{{ path('dons') }}">Dons</a>                            
                            <a href="{{ path('feats') }}">Editeur Dons</a>
                            <a href="{{ path('class.options') }}">Editeur Options</a>
                            <a href="{{ path('class.subclasses') }}">Editeur Sous-classes</a>
                            <a href="{{ path('class.subclasstraits') }}">Editeur Traits</a>
                        </div>
                    </li>
                    <li class="dropdown">
                        <a href="" class="dropbtn">Créatures</a>
                        <div class="dropdown-content">                        
                            <a href="{{ path('creature.compendium') }}">Compendium</a>
                            <a href="{{ path('alignments') }}">Editeur Alignement</a>
                            <a href="{{ path('creatures') }}">Editeur Créatures</a>
                            <a href="{{ path('creature.sizes') }}">Editeur Tailles</a>
                            <a href="{{ path('creature.types') }}">Editeur Types</a>
                        </div>
                    </li>
                    <li class="dropdown">
                        <a href="" class="dropbtn">Divers</a>
                        <div class="dropdown-content">
                            <a href="{{ path('convert') }}">Convertisseur</a>
                            <a href="{{ path('sources') }}">Editeur Sources</a>
                        </div>
                    </li>
                </ul>
            </nav>
        </header>
        {% endblock %}
        {% block body %}{% endblock %}
        {% block footer %}
        <footer class="center-item">
            <h2>Footer</h2>
        </footer>
        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
